{%- assign cp = context.headers.REQUEST_URI -%}

<header class="shadow-md relative bg-white">
  <div class="container py-8 flex flex-wrap sm:flex-no-wrap justify-between items-center">
    <a href="/" class="inline-block no-underline m-auto sm:m-0">
      <span class="screen-reader-text">Home</span>
      {% include 'svg/logo', height: 37 %}
    </a>

    <nav class="font-medium mt-4 md:mt-0">
      <ul class="flex flex-wrap items-center list-none">
        <li class="w-full sm:w-auto text-center sm:text-left">
          <a href="/get-started"
            class="{% if cp contains '/get-started' %}text-pos-blue{% endif %} no-underline text-lg hover:text-pos-blue leading-loose py-1 sm:py-0 sm:text-sm">
            Get Started
          </a>
        </li>
        <li class="w-full sm:w-auto text-center sm:text-left sm:ml-5 md:ml-10">
          <a href="/developer-guide"
            class="{% if cp contains '/developer-guide' %}text-pos-blue{% endif %} no-underline text-lg hover:text-pos-blue leading-loose py-1 sm:py-0 sm:text-sm">
            Developer Guide
          </a>
        </li>
        <li class="w-full sm:w-auto text-center sm:text-left sm:ml-5 md:ml-10">
          <a href="/api-reference"
            class="{% if cp contains '/api-reference' %}text-pos-blue{% endif %} no-underline text-lg hover:text-pos-blue leading-loose py-1 sm:py-0 sm:text-sm">
            API Reference
          </a>
        </li>
        <li class="w-full sm:w-auto text-center sm:text-left sm:ml-5 md:ml-10">
          <a href="/best-practices"
            class="{% if cp contains '/best-practices' %}text-pos-blue{% endif %} no-underline text-lg hover:text-pos-blue leading-loose py-1 sm:py-0 sm:text-sm">
            Best Practices
          </a>
        </li>
        <li class="w-full sm:w-auto text-center sm:text-left sm:ml-5 md:ml-10">
          <a href="/use-cases"
            class="{% if cp contains '/use-cases' %}text-pos-blue{% endif %} no-underline text-lg hover:text-pos-blue leading-loose py-1 sm:py-0 sm:text-sm">
            Use Cases
          </a>
        </li>

        <li class="w-full sm:w-auto text-center sm:text-left sm:ml-5 md:ml-10 mt-4 md:mt-0">
          <a href="/try-now"
            class="btn btn-primary btn-try-now text-white py-1 px-6">
            TRY NOW
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
